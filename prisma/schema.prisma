generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  name String @unique
  image String[]
  price Decimal
  categoryId String
  category Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id String @id @default(uuid())
  name String
  products Product[]
}